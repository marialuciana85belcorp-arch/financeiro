{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1"
    },
    { 
      "src": "/(.*).(js|css|svg|jpg|jpeg|png|gif|ico|json)", 
      "dest": "/$1.$2" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}